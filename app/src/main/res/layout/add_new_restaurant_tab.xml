<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/veryLightGrey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/search_bar_content_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight=".1"
                    android:background="@drawable/search_edittext_background"
                    android:layout_gravity="center_horizontal">

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/black"
                        android:id="@+id/restaurant_search_bar"
                        android:hint="Enter restaurant name"
                        android:background="@android:color/transparent"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:layout_marginLeft="5dp"
                        android:maxLines="1"
                        android:inputType="text"
                        />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/primaryColor"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"/>

                    <LinearLayout
                        android:id="@+id/change_city_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                        <ImageButton
                            android:layout_width="12dp"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:background="@null"
                            android:adjustViewBounds="true"
                            android:textColor="@color/white"
                            android:src="@drawable/location_icon_red"/>

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:id="@+id/city_title"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="City"
                            android:textColor="@color/black">

                        </TextView>

                    </LinearLayout>

                </LinearLayout>

                <ImageButton
                    android:id="@+id/search_btn"
                    android:layout_width="match_parent"
                    android:layout_weight=".9"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/search_icon_white"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Savor Saver Favorites"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"

                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/primaryColor"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/sponsored_restaurants_layout"
                >



            </LinearLayout>

        </LinearLayout>



    </ScrollView>

