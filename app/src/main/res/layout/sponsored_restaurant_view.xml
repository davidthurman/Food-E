<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="275dp"
    android:background="@drawable/sponsored_restaurant_background_shadow"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardElevation="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="-20dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/question_mark_icon_square"
                android:scaleType="centerCrop"
                android:visibility="visible"/>

        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:visibility="gone"
            android:id="@+id/loading_container"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center">

            <com.tuyenmonkey.mkloader.MKLoader
                android:id="@+id/loader"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:mk_type="TwinFishesSpinner"
                app:mk_color="@color/seaBlue"
                />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/sponsored_restaurant_info_background"
        android:padding="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Guâ€™s Kitchen"
                android:textColor="@color/seaBlue"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <RatingBar
                android:isIndicator="true"
                android:layout_gravity="right"
                android:theme="@style/RatingBar"
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:scaleX=".4"
                android:layout_marginTop="-11dp"
                android:layout_marginRight="-70dp"
                android:scaleY=".4"
                android:numStars="5"/>

        </FrameLayout>

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4897 Buford Hwy NE #104, Chamblee, GA 30341, United States"/>



    </LinearLayout>


</LinearLayout>